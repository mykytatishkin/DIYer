@page
@model DIYer.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Login</h1>

<h4>ChatUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ChatUser.Email" class="control-label"></label>
                <input asp-for="ChatUser.Email" class="form-control" />
                <span asp-validation-for="ChatUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChatUser.Password" class="control-label"></label>
                <input asp-for="ChatUser.Password" class="form-control" />
                <span asp-validation-for="ChatUser.Password" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Registration">Registration</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
